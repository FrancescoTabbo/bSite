  body
    nav.navbar.navbar-default
        .container-fluid
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
            #navbar.navbar-collapse.collapse
                ul.nav
                    li.active
                        a(href='/') Home
                    li
                        a(href='/guide') Guide
                    li
                        a(href='#') Altro
    .container
      .row
        .col-md-6.m-auto
          br
          hr
          br
          | #{err}
          if searchR
            //each file in searchR
            .card.card-bosy.mb3
              if searchR[0].isImage
                - var url = searchR[0].filename
                img(src='/image/' + url + '')
              else
                - var url = searchR[0].filename
                .icons
                  img(src = '/fileType/' + url + '', class='icon') 
                  |
                  | #{searchR[0].metadata.original}
              .row
                if per == 1
                  .col-sm-6
                    .card-footer
                      - var id = searchR[0]._id
                      - var nome = searchR[0].metadata.original
                      - var name = searchR[0].filename
                      form(action='/files/del/' + id + '', method='post')
                        button.btn.btn-danger
                          i.glyphicon.glyphicon-ban-circle
                            |  Remove
                .col-sm-6
                  .card-footer
                    form(action='files/download/' + name + '', method='post')
                      button.btn.btn-primary
                        i.fa.fa-download
                          |  Download
          else
            p.description Nessuna Foto Caricata
          .col-sm-2
            form(action='/logout', method='POST')
              br
              input(type='submit', value='LogOut', class='btn btn-primary')
    .footer.text-center
      a.up-arrow(href='#', data-toggle='tooltip', title='TO TOP')
        span.glyphicon.glyphicon-chevron-up
      br
      br
